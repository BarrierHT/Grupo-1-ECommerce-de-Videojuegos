<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="/css/register.css" />
  <title>Registro</title>

  <body class="bg-dkblue">
    <%- include('../partials/header') %>
    <main class="main-register flex j-content-center">
      <section class="input-container-register">
        <div class="register">
          <h1 class="tamano-title">Registro</h1>
          <br />
          <hr />
          <div class="form size-font-parr">
            <form
              action="/register"
              method="post"
              id="form"
              enctype="multipart/form-data"
            >
              <label for="username" class="w-100"
                >Apellido: <i class="bi bi-person-lines-fill"></i>
              </label>
              <input
                type="text"
                id="lastname"
                name="lastname"
                placeholder="Enter your lastname"
                value="<%= locals.oldValue ? oldValue.lastname : null %>"
              /><br />
              <% if(locals.errors && errors.lastname) { %>
              <!---->
              <%=errors.lastname.msg %>
              <!---->
              <% } %>
              <hr />
              <label for="username" class="w-100"
                >Nombre: <i class="bi bi-person-video2"></i
              ></label>
              <input
                type="text"
                id="username"
                name="username"
                placeholder="Enter your name"
                value="<%= locals.oldValue ? oldValue.username : null %>"
              /><br />
              <% if(locals.errors && errors.username) { %>
              <!---->
              <%=errors.username.msg %>
              <!---->
              <% } %>
              <hr />
              <label for="email" class="w-100"
                >Correo Electronico: <i class="bi bi-envelope"></i
              ></label>
              <input
                type="email"
                id="email"
                name="email"
                placeholder="Enter your email"
                value="<%= locals.oldValue ? oldValue.email : null %>"
              /><br />
              <% if(locals.errors && errors.email) { %>
              <!---->
              <%=errors.email.msg %>
              <!---->
              <% } %>
              <hr />
              <label for="imagen"
                >Imagen: <i class="bi bi-file-earmark-image"></i
              ></label>
              <input
                class="file-imagen"
                type="file"
                name="imagen"
                id="imagen"
                accept="image/*"
              /><br />
              <% if(locals.errors && errors.imagen) { %>
              <!---->
              <%=errors.imagen.msg %>
              <!---->
              <% } %>
              <hr />
              <label for="password" class="w-100"
                >Contraseña: <i class="bi bi-file-lock"></i
              ></label>
              <input
                type="password"
                id="password"
                name="password"
                placeholder="Enter your password"
              /><br />
              <% if(locals.errors && errors.password) { %>
              <!---->
              <%=errors.password.msg %>
              <!---->
              <% } %>
              <hr />
              <label for="password2" class="w-100"
                >Confirmar Contraseña: <i class="bi bi-key"></i
              ></label>
              <input
                type="password"
                id="password2"
                name="password2"
                placeholder="Enter your password"
              />
              <hr />
              <% if(locals.errors && errors.password2) { %>
              <!---->
              <%=errors.password2.msg %>
              <!---->
              <% } %>
              <br />
              <br />
              <button class="register-btn" type="submit">Registrarse</button>
            </form>
          </div>
        </div>
      </section>
    </main>
    <%- include('../partials/footer') %> <%- include('../partials/js') %>
  </body>
</html>
